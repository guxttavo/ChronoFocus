@model Core.Models.Departamento
@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>
<h4>Tem certeza que quer excluir este departamento?</h4>
<hr />
<dl class="row">
  <dt class="col-sm-1">
    @Html.DisplayNameFor(Model => Model.Nome)
  </dt>
  <dd class="col-sm-11">
    @Html.DisplayFor(Model => Model.Nome)
  </dd>
</dl>
<form  id="formExcluir" onsubmit="departamento.excluir()">
  <input type="hidden" asp-for="Id" />
  <input type="submit" value="Excluir" class="btn btn-danger" />
  <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
    <script src="~/js/Pages/departamento.js" asp-append-version="true"></script>
<script>
    departamento.init({
        urls: {
            excluir: '@Url.Action("excluir", "Departamento")',
            index: '@Url.Action("Index", "Departamento")'
        }
    })
</script>